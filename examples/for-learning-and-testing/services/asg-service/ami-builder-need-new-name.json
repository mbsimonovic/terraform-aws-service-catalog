{
  "variables": {
    "version_tag": "1",
    "aws_region": "eu-central-1",
    "ami_name": "asg-example-rename-me",
    "encrypt_boot": "false",
    "service_catalog_ref": "iac-1421-asg-migration",
    "github_auth_token": "{{env `GITHUB_OAUTH_TOKEN`}}"
  },
  "builders": [{
    "ami_name": "{{user `ami_name`}}-{{isotime | clean_resource_name}}",
    "ami_description": "An Ubuntu AMI that is meant to be run as a busybox server.",
    "region": "{{user `aws_region`}}",
    "instance_type": "t3.micro",
    "type": "amazon-ebs",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "architecture": "x86_64",
        "name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-*",
        "block-device-mapping.volume-type": "gp2",
        "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "ssh_username": "ubuntu",
    "encrypt_boot": "{{user `encrypt_boot`}}",
    "tags": {
      "version": "{{user `version_tag`}}"
    }
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sudo DEBIAN_FRONTEND=noninteractive apt-get update",
      "sudo DEBIAN_FRONTEND=noninteractive apt-get -y upgrade",
      "sudo DEBIAN_FRONTEND=noninteractive apt-get -y autoclean",
      "sudo DEBIAN_FRONTEND=noninteractive apt-get -y install busybox jq curl",
      "curl -Ls https://raw.githubusercontent.com/gruntwork-io/gruntwork-installer/master/bootstrap-gruntwork-installer.sh | bash /dev/stdin --version v0.0.22",
      "gruntwork-install --module-name services/asg-service --repo https://github.com/gruntwork-io/aws-service-catalog --tag {{user `service_catalog_ref`}}"
    ],
    "environment_vars": [
      "GITHUB_OAUTH_TOKEN={{user `github_auth_token`}}"
    ],
    "pause_before": "30s"
  }]
}
