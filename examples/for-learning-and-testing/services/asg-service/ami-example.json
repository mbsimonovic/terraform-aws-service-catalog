{
  "variables": {
    "version_tag": "1",
    "aws_region": "",
    "service_catalog_ref": "",
    "module_security_version": "",
    "module_aws_monitoring_version": "",
    "bash_commons_version": "",
    "ami_name": "asg-example",
    "encrypt_boot": "false",
    "github_auth_token": "{{env `GITHUB_OAUTH_TOKEN`}}",
    "enable_ssh_grunt": "true",
    "enable_cloudwatch_metrics": "true",
    "enable_cloudwatch_log_aggregation": "true",
    "module_ec2_baseline_version": "",
    "module_ec2_baseline_branch": "",
    "gruntwork_installer_version": "v0.0.30"
  },
  "sensitive-variables": ["github_auth_token"],
  "builders": [{
    "ami_name": "{{user `ami_name`}}-{{isotime | clean_resource_name}}",
    "ami_description": "An example AMI built on Ubuntu that runs a simple 'Hello, World' server.",
    "region": "{{user `aws_region`}}",
    "instance_type": "t3.micro",
    "type": "amazon-ebs",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "architecture": "x86_64",
        "name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-*",
        "block-device-mapping.volume-type": "gp2",
        "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "ssh_username": "ubuntu",
    "encrypt_boot": "{{user `encrypt_boot`}}",
    "associate_public_ip_address": true,
    "tags": {
      "version": "{{user `version_tag`}}"
    }
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sudo DEBIAN_FRONTEND=noninteractive apt-get update",
      "sudo DEBIAN_FRONTEND=noninteractive apt-get -y upgrade",
      "sudo DEBIAN_FRONTEND=noninteractive apt-get -y install busybox jq curl",
      "curl -Ls https://raw.githubusercontent.com/gruntwork-io/gruntwork-installer/master/bootstrap-gruntwork-installer.sh | bash /dev/stdin --version {{user `gruntwork_installer_version`}}",
      "gruntwork-install --module-name services/asg-service --repo https://github.com/gruntwork-io/terraform-aws-service-catalog --branch {{user `service_catalog_ref`}}"
    ],
    "environment_vars": [
      "GITHUB_OAUTH_TOKEN={{user `github_auth_token`}}",
      "module_security_version={{user `module_security_version`}}",
      "module_aws_monitoring_version={{user `module_aws_monitoring_version`}}",
      "module_ec2_baseline_version={{user `module_ec2_baseline_version`}}",
      "module_ec2_baseline_branch={{user `module_ec2_baseline_branch`}}",
      "bash_commons_version={{user `bash_commons_version`}}",
      "enable_ssh_grunt={{user `enable_ssh_grunt`}}",
      "enable_cloudwatch_metrics={{user `enable_cloudwatch_metrics`}}",
      "enable_cloudwatch_log_aggregation={{user `enable_cloudwatch_log_aggregation`}}"
    ],
    "pause_before": "30s"
  }]
}
