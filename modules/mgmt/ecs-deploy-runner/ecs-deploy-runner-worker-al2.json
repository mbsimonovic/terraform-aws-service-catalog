{
  "variables": {
    "service_catalog_ref": null,
    "version_tag": null,
    "aws_region": "us-east-1",
    "ami_name": "ecs-deploy-runner-worker",
    "copy_to_regions": "",
    "github_auth_token": "{{env `GITHUB_OAUTH_TOKEN`}}",
    "encrypt_boot": "false",
    "encrypt_kms_key_id": "",
    "vpc_filter_key": "isDefault",
    "vpc_filter_value": "true",
    "vpc_subnet_filter_key": "default-for-az",
    "vpc_subnet_filter_value": "true",
    "gruntwork_installer_version": "v0.0.28",
    "ami_users": "",
    "bash_commons_version": "",
    "module_ecs_version": "",
    "module_security_version": "",
    "module_aws_monitoring_version": "",
    "enable_cloudwatch_metrics": "true",
    "enable_cloudwatch_log_aggregation": "true"
  },
  "sensitive-variables": ["github_auth_token"],
  "builders": [{
    "ami_name": "{{user `ami_name`}}-{{user `version_tag`}}-{{isotime | clean_resource_name}}",
    "ami_description": "An AL2 ECS Optimized AMI that is meant to be run as an EC2 worker for ECS deploy runner.",
    "region": "{{user `aws_region`}}",
    "instance_type": "t3.micro",
    "type": "amazon-ebs",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "architecture": "x86_64",
        "name": "*amzn2-ami-ecs-hvm*",
        "block-device-mapping.volume-type": "gp2",
        "root-device-type": "ebs"
      },
      "owners": ["amazon"],
      "most_recent": true
    },
    "vpc_filter": {
      "filters": {
        "{{user `vpc_filter_key`}}": "{{user `vpc_filter_value`}}"
      }
    },
    "subnet_filter": {
      "filters": {
        "{{user `vpc_subnet_filter_key`}}": "{{user `vpc_subnet_filter_value`}}"
      },
      "most_free": "true"
    },
    "ssh_username": "ec2-user",
    "encrypt_boot": "{{user `encrypt_boot`}}",
    "kms_key_id": "{{user `encrypt_kms_key_id`}}",
    "ami_users": "{{user `ami_users`}}",
    "ami_regions": "{{user `copy_to_regions`}}",
    "tags": {
      "service": "{{ user `ami_name` }}",
      "version": "{{user `version_tag`}}"
    }
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sudo yum update -y && sudo yum install -y unzip jq",
      "curl -Ls https://raw.githubusercontent.com/gruntwork-io/gruntwork-installer/master/bootstrap-gruntwork-installer.sh | bash /dev/stdin --version {{user `gruntwork_installer_version`}}",
      "gruntwork-install --module-name mgmt/ecs-deploy-runner --repo https://github.com/gruntwork-io/aws-service-catalog --tag {{user `service_catalog_ref`}}"
    ],
    "environment_vars": [
      "GITHUB_OAUTH_TOKEN={{user `github_auth_token`}}",
      "module_ecs_version={{user `module_ecs_version`}}",
      "module_security_version={{user `module_security_version`}}",
      "module_aws_monitoring_version={{user `module_aws_monitoring_version`}}",
      "bash_commons_version={{user `bash_commons_version`}}",
      "enable_cloudwatch_metrics={{user `enable_cloudwatch_metrics`}}",
      "enable_cloudwatch_log_aggregation={{user `enable_cloudwatch_log_aggregation`}}"
    ],
    "pause_before": "30s"
  }]
}
