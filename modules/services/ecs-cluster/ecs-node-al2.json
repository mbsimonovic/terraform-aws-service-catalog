{
  "variables": {
    "service_catalog_ref": "master",
    "version_tag": null,
    "aws_region": "us-east-1",
    "ami_name": "ecs-cluster-instance",
    "copy_to_regions": "",
    "github_auth_token": "{{env `GITHUB_OAUTH_TOKEN`}}",
    "encrypt_boot": "false",
    "encrypt_kms_key_id": "",
    "vpc_filter_key": "isDefault",
    "vpc_filter_value": "true",
    "vpc_subnet_filter_key": "default-for-az",
    "vpc_subnet_filter_value": "true",
    "ami_users": "",
    "ecs_cluster_version": "",
    "module_security_version": "",
    "module_aws_monitoring_version": "",
    "bash_commons_version": "",
    "terraform_version": "",
    "terragrunt_version": "",
    "docker_version": "",
    "enable_ssh_grunt": "true",
    "enable_cloudwatch_metrics": "true",
    "enable_cloudwatch_log_aggregation": "true"
  },
  "sensitive-variables": ["github_auth_token"],
  "builders": [{
    "ami_name": "{{user `ami_name`}}-{{user `version_tag`}}-{{isotime | clean_resource_name}}",
    "ami_description": "An Amazon ECS-optimized AMI that is meant to be run as part of an ECS cluster.",
    "region": "{{user `aws_region`}}",
    "instance_type": "t3.micro",
    "type": "amazon-ebs",
    "associate_public_ip_address": true,
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "architecture": "x86_64",
        "name": "*amzn-ami*amazon-ecs-optimized*",
        "block-device-mapping.volume-type": "gp2",
        "root-device-type": "ebs"
      },
      "owners": ["amazon"],
      "most_recent": true
    },
    "vpc_filter": {
        "filters": {
          "{{user `vpc_filter_key`}}": "{{user `vpc_filter_value`}}"
        }
    },
    "subnet_filter": {
        "filters": {
          "{{user `vpc_subnet_filter_key`}}": "{{user `vpc_subnet_filter_value`}}"
        },
        "most_free": "true"
    },
    "ssh_username": "ec2-user",
    "encrypt_boot": "{{user `encrypt_boot`}}",
    "kms_key_id": "{{user `encrypt_kms_key_id`}}",
    "ami_users": "{{user `ami_users`}}",
    "ami_regions": "{{user `copy_to_regions`}}",
    "tags": {
      "service": "{{ user `ami_name` }}",
      "version": "{{user `version_tag`}}"
    }
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sudo yum update -y && sudo yum install -y aws-cli unzip perl-Digest-SHA jq curl",
      "curl -Ls https://raw.githubusercontent.com/gruntwork-io/gruntwork-installer/master/bootstrap-gruntwork-installer.sh | bash /dev/stdin --version v0.0.22",
      "gruntwork-install --module-name services/ecs-cluster --repo https://github.com/gruntwork-io/aws-service-catalog --tag {{user `service_catalog_ref`}}"
    ],
    "environment_vars": [
      "GITHUB_OAUTH_TOKEN={{user `github_auth_token`}}",
      "ecs_cluster_version={{user `ecs_cluster_version`}}",
      "module_security_version={{user `module_security_version`}}",
      "module_aws_monitoring_version={{user `module_aws_monitoring_version`}}",
      "bash_commons_version={{user `bash_commons_version`}}",
      "terraform_version={{user `terraform_version`}}",
      "terragrunt_version={{user `terragrunt_version`}}",
      "packer_version={{user `packer_version`}}",
      "docker_version={{user `docker_version`}}",
      "enable_ssh_grunt={{user `enable_ssh_grunt`}}",
      "enable_cloudwatch_metrics={{user `enable_cloudwatch_metrics`}}",
      "enable_cloudwatch_log_aggregation={{user `enable_cloudwatch_log_aggregation`}}"
    ],
    "pause_before": "30s"
  }]
}
